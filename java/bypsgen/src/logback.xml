<configuration>

  <appender name="FILE" class="ch.qos.logback.core.FileAppender">
    <file>bypsgen.log</file>
    <append>false</append>
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} %-5level %-60(%thread %X{NDC} \(%logger{0}.java:%L\)) - %msg%n</pattern>
    </encoder>
  </appender>

  <root level="info">
    <appender-ref ref="FILE" />
  </root>

</configuration>

